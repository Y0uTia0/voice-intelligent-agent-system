{
  "name": "frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "test": "cross-env NODE_OPTIONS=--max_old_space_size=8192 jest",
    "test:ci": "cross-env NODE_OPTIONS=--max_old_space_size=8192 jest --bail --runInBand",
    "test:components": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest src/components --runInBand",
    "test:hooks": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest src/hooks --runInBand",
    "test:utils": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest src/utils --runInBand",
    "test:services": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest src/services --runInBand",
    "test:contexts": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest src/contexts --runInBand",
    "test:pages": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest src/pages --runInBand",
    "test:coverage": "cross-env NODE_OPTIONS=--max_old_space_size=8192 jest --coverage",
    "test:coverage:hooks": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest --coverage src/hooks",
    "test:coverage:utils": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest --coverage src/utils",
    "test:classify": "jest src/components/classifyIntent.test.js",
    "test:tts": "jest src/hooks/__tests__/useTTS.test.js src/hooks/__tests__/useTTS.a11y.test.js",
    "test:a11y": "cross-env NODE_OPTIONS=--max_old_space_size=4096 jest --testMatch=\"**/*.a11y.test.[jt]s?(x)\"",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:voice": "cypress run --spec \"cypress/e2e/voice/**/*.cy.js\"",
    "dev:test": "cross-env VITE_MOCK_ENABLED=true vite"
  },
  "description": "本文档包含了项目的前端开发规范、接口说明、业务流程以及测试验收标准等内容。",
  "main": "postcss.config.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "antd-mobile": "^5.32.0",
    "antd-mobile-icons": "^0.3.0",
    "autoprefixer": "^10.4.16",
    "axios": "^1.9.0",
    "postcss": "^8.4.31",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-speech-recognition": "^4.0.1",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "axios-mock-adapter": "^2.1.0",
    "babel-jest": "^30.0.0-beta.3",
    "cross-env": "^7.0.3",
    "cypress": "^13.6.6",
    "cypress-mochawesome-reporter": "^3.6.0",
    "eslint": "^9.27.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^7.0.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "msw": "^2.10.2"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
